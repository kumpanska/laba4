<Window x:Class="lab4.ExhibitForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab4"
        mc:Ignorable="d"
        Title="ExhibitForm" Height="450" Width="800">
    <Grid Margin="10" Background="Beige">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Content="Work of Art:" Margin="0,10,0,0"/>
        <ComboBox Grid.Row="0" Grid.Column="1" x:Name="cboWorkOfArt" Margin="5,10,0,0" DisplayMemberPath="NameOfArt" IsEditable="False"/>
        <Button Grid.Row="0" Grid.Column="2" Content="+" Width="30" Margin="5,10,0,0" Click="btnAddWorkOfArt_Click"/>

        <Label Grid.Row="1" Grid.Column="0" Content="Fund:" Margin="0,10,0,0"/>
        <ComboBox Grid.Row="1" Grid.Column="1" x:Name="cboFund" Margin="5,10,0,0" DisplayMemberPath="Name" IsEditable="False"/>
        <Button Grid.Row="1" Grid.Column="2" Content="+" Width="30" Margin="5,10,0,0" Click="btnAddFund_Click"/>

        <Label Grid.Row="2" Grid.Column="0" Content="Placement:" Margin="0,10,0,0"/>
        <ComboBox Grid.Row="2" Grid.Column="1" x:Name="cboPlacement" Margin="5,10,0,0" Grid.ColumnSpan="2"/>

        <Label Grid.Row="3" Grid.Column="0" Content="Cost:" Margin="0,10,0,0"/>
        <TextBox Grid.Row="3" Grid.Column="1" x:Name="txtCost" Margin="5,10,0,0" Grid.ColumnSpan="2"/>

        <TextBlock Grid.Row="4" Grid.Column="1" x:Name="txtError" Foreground="Red" TextWrapping="Wrap" Margin="5,5,0,0" Grid.ColumnSpan="2"/>

        <StackPanel Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="btnSave" Content="Save and close" Width="75" Margin="0,0,10,0" Click="btnSave_Click"/>
            <Button x:Name="btnCancel" Content="Cancel and close" Width="75" Click="btnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
