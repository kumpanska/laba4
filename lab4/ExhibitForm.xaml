<Window x:Class="lab4.ExhibitForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab4"
        mc:Ignorable="d"
        Title="ExhibitForm" Height="450" Width="800" Closing="Window_Closing">
    <Grid Margin="10" Background="Beige">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Content="Work of Art:" Margin="0,10,0,0"/>
        <ListBox Grid.Row="0" Grid.Column="1" x:Name="lstWorkOfArt" Margin="5,10,55,0" DisplayMemberPath="NameOfArt" Grid.RowSpan="2"/>
        <Button Grid.Row="0" Grid.Column="2" Content="Add" Width="75" Height="30" Margin="5,10,0,0" VerticalAlignment="Top" Click="btnAddWorkOfArt_Click"/>
        <Button Grid.Row="0" Grid.Column="2" Content="Edit" Width="75" Height="30" Margin="5,45,0,0" VerticalAlignment="Top" IsEnabled="False" Click="btnEditWorkOfArt_Click"/>

        <Label Grid.Row="6" Grid.Column="0" Content="Fund:" Margin="0,5,626,98" Grid.ColumnSpan="2"/>
        <ListBox Grid.Row="6" Grid.Column="1" x:Name="lstFund" Margin="0,5,0,98" DisplayMemberPath="Name" HorizontalAlignment="Left" Width="228"/>
        <Button Grid.Row="6" Grid.Column="2" Content="Add" Width="75" Height="30" Margin="0,39,5,0" VerticalAlignment="Top" Click="btnAddFund_Click"/>
        <Button Grid.Row="6" Grid.Column="2" Content="Edit" Width="75" Height="30" Margin="0,76,5,0" VerticalAlignment="Top" IsEnabled="False" Click="btnEditFund_Click"/>

        <Label Grid.Row="2" Grid.Column="0" Content="Placement:" Margin="0,10,0,0"/>
        <ComboBox Grid.Row="2" Grid.Column="1" x:Name="cboPlacement" Margin="5,10,438,36" Grid.RowSpan="2"/>
        <Label Grid.Row="3" Grid.Column="0" Content="Cost:" Margin="0,10,0,0"/>
        <TextBox Grid.Row="3" Grid.Column="1" x:Name="txtCost" Margin="5,10,438,21" Grid.RowSpan="2"/>

        <TextBlock Grid.Row="4" Grid.Column="1" x:Name="txtError" Foreground="DarkRed" TextWrapping="Wrap" Margin="5,5,0,0" Grid.ColumnSpan="2"/>


        <StackPanel Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Right"/>
        <Button x:Name="btnSave" Content="Save and close" Width="75" Height="30" Click="btnSave_Click" Grid.Column="1" Margin="452,229,97,0" Grid.RowSpan="2" Grid.Row="6"/>
        <Button x:Name="btnCancel" Content="Cancel and close" Width="75" Height="30" Click="btnCancel_Click" Grid.Column="1" Grid.ColumnSpan="2" Margin="583,229,5,0" Grid.Row="6"/>
    </Grid>
</Window>
