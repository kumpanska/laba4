<Window x:Class="lab4.ExhibitForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab4"
        mc:Ignorable="d"
        Title="ExhibitForm" Height="450" Width="800" Closing="Window_Closing">
    <Grid Margin="10" Background="Beige">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Content="Work of Art:" Margin="0,10,0,0"/>
        <ListBox Grid.Row="0" Grid.Column="1" x:Name="lstWorkOfArt" Margin="5,10,55,0" DisplayMemberPath="NameOfArt" SelectionMode="Single"/>
        <Button Grid.Row="0" Grid.Column="2" Content="Add" Width="30" Margin="5,10,0,0" Click="btnAddWorkOfArt_Click"/>
        <Button Grid.Row="0" Grid.Column="1" Content="Edit" Width="30" Margin="631,10,10,36" Click="btnEditWorkOfArt_Click" Grid.RowSpan="2"/>

        <Label Grid.Row="1" Grid.Column="0" Content="Fund:" Margin="0,10,0,0"/>
        <ListBox Grid.Row="1" Grid.Column="1" x:Name="lstFund" Margin="5,10,0,36" DisplayMemberPath="Name" SelectionMode="Single" HorizontalAlignment="Left" Grid.RowSpan="2" Width="611"/>
        <Button Grid.Row="1" Grid.Column="2" Content="Add" Width="30" Margin="5,10,0,0" Click="btnAddFund_Click"/>
        <Button Grid.Row="1" Grid.Column="1" Content="Edit" Margin="631,10,10,36" Click="btnEditFund_Click" Grid.RowSpan="2"/>

        <Label Grid.Row="2" Grid.Column="0" Content="Placement:" Margin="0,10,0,0"/>
        <ComboBox Grid.Row="2" Grid.Column="1" x:Name="cboPlacement" Margin="5,10,438,36" Grid.RowSpan="2"/>

        <Label Grid.Row="3" Grid.Column="0" Content="Cost:" Margin="0,10,0,0"/>
        <TextBox Grid.Row="3" Grid.Column="1" x:Name="txtCost" Margin="5,10,438,21" Grid.RowSpan="2"/>

        <TextBlock Grid.Row="4" Grid.Column="1" x:Name="txtError" Foreground="DarkRed" TextWrapping="Wrap" Margin="5,5,0,0" Grid.ColumnSpan="2"/>

        <StackPanel Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Right"/>
        <Button x:Name="btnSave" Content="Save and close" Click="btnSave_Click" Grid.Column="1" Margin="452,229,97,0" Grid.RowSpan="2" Grid.Row="6"/>
        <Button x:Name="btnCancel" Content="Cancel and close" Click="btnCancel_Click" Grid.Column="1" Grid.ColumnSpan="2" Margin="583,229,5,0" Grid.Row="6"/>
    </Grid>
</Window>
